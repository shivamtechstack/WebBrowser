<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bookmarks_icon"
        android:layout_width="35dp"
        android:layout_marginEnd="15dp"
        android:layout_height="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bookmarks_title"
            android:layout_width="match_parent"
            android:hint="bookmark title"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/bookmarks_url"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:hint="bookmark url"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/bookmarks_close"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cross_small_24"/>

</LinearLayout>